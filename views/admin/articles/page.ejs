<body>
 <%- include  ../../partials/navbar.ejs %>
 <div class="container">
    <div class="container">
        <hr>
        
     <hr>
    <% result.articles.rows.forEach(article=>{%>
       <div class="card">
           <div class="card-header">
           <h2><%= article.title%></h2>
           </div>
           <div class="card-body">
   <a href="/<%= article.slug %>"><button class="btn btn-success">Ler Artigo</button></a>
           </div>
       </div>
       <br>
      <%  })%>
      <div class="row">
        <div class="col col-12">
             <% if(result.page > 2) {%>
                <a href="/articles/page/<%= result.page - 1 %>"  > <<< Prev</a> 
                <%}else if(result.page == 2) {%>
                    <a href="/"  > <<< Prev</a> 
               <%}%>
              

            <% if(result.next) {%>
                <a href="/articles/page/<%= result.page + 1 %>" style="float:right;">Next >>></a>
                <%}%>
         
        </div>
        
        <hr>
    </div>
    <hr>
 </div>
 
</body>
